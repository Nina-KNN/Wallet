<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.wallet">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_wallet"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".feature.details.SplashActivity"
            android:configChanges="orientation"
            android:screenOrientation="nosensor">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".feature.details.BalanceResultActivity"
            android:configChanges="orientation"
            android:screenOrientation="nosensor" />
        <activity
            android:name=".feature.details.BalanceListActivity"
            android:configChanges="orientation"
            android:screenOrientation="nosensor" />
        <activity
            android:name=".feature.details.ItemOperationActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="nosensor"
            android:windowSoftInputMode="stateAlwaysHidden" />
    </application>

</manifest>