<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".feature.details.BalanceListActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/colorBlueDark" >

            <ImageButton
                android:id="@+id/button_back_balance_list"
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_arrow_left_button"
                android:layout_marginLeft="8dp"
                android:background="@android:color/transparent"/>

            <TextView
                android:id="@+id/title_positive_list"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingRight="30dp"
                android:layout_marginRight="8dp"
                android:textSize="15dp"
                android:textStyle="bold"
                android:hint="@string/title_profit"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="70dp"
            android:padding="5dp"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:padding="5dp"
        android:background="@color/colorBlueDark">

        <ImageButton
            android:id="@+id/previous_month"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/ic_arrow_left_button"
            android:background="@android:color/transparent"/>

        <ImageButton
            android:id="@+id/next_month"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/ic_arrow_right_button"
            android:background="@android:color/transparent"/>

        <ImageButton
            android:id="@+id/add_item"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/ic_add_button"
            android:background="@android:color/transparent"/>

        <ImageButton
            android:id="@+id/change_list"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/ic_expense_button"
            android:background="@android:color/transparent"/>

        <ImageButton
            android:id="@+id/balance_list"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:src="@drawable/ic_balance_button"
            android:background="@android:color/transparent"/>

    </LinearLayout>

</FrameLayout>